<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base Default application theme. -->
    <style name="defaultAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/defaultPrimaryColour</item>
        <item name="colorPrimaryDark">@color/defaultPrimaryDark</item>
        <item name="colorAccent">@color/defaultColourAccent</item>
    </style>

    <!-- Base Female application theme. -->
    <style name="femaleAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/femalePrimaryColour</item>
        <item name="colorPrimaryDark">@color/femalePrimaryDark</item>
        <item name="colorAccent">@color/femaleColourAccent</item>
    </style>

    <!-- Base Male application theme. -->
    <style name="maleAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/malePrimaryColour</item>
        <item name="colorPrimaryDark">@color/malePrimaryDark</item>
        <item name="colorAccent">@color/maleColourAccent</item>
    </style>

    <style name="defaultAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="femaleAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="maleAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Card.Margins" parent="CardView">
        <item name="android:layout_marginTop">@dimen/margin_normal</item>
        <item name="android:layout_marginBottom">@dimen/margin_normal</item>
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardCornerRadius">@dimen/margin_small</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardBackgroundColor">@android:color/white</item>
    </style>



</resources>